<h1>Today's Homework</h1>

<% if @works.any? %>
<table class="table table-hover">
    <thead>
        <tr>
          <th scope='col'>ID</th>
          <th scope='col'>Title</th>
          <th scope='col'>Contents</th>
        </tr>
    </thead>
    <tbody>
<% @works.each do |work| %>

<tr>
    <td><%= link_to work.id, work %></td>
    <td><%= work.title %></td>
    <td><%= work.content %></td>
</tr>

<% end %>
    </tbody>
   
</table>
<% end %>


<%= paginate @works %>


<%= link_to 'Post New Works', new_work_path, class: "btn btn-primary btn-lg active" %>
